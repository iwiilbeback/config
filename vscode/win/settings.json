{
    //font
    "editor.fontSize": 14,
    "window.zoomLevel": 1, 
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontLigatures": false,// 启用字体连字
    // 控制字体粗细。
    "editor.fontWeight": "normal",
    "workbench.colorTheme": "Material Theme",
    // 长句自动折叠 
    "editor.wordWrap": "on",
    // VSCode 的资源管理器中文件(夹)图标, 需要在插件中搜索并安装
    "workbench.iconTheme": "material-icon-theme",
    // 多光标编辑器, 选择多光标时的按键
    "editor.multiCursorModifier": "alt",
    //git
    "git.path":"C:/laragon/bin/git/bin/git.exe",
    //vim
    //解决vim 模式下CPU占用过高，卡顿问题
    "vim.easymotion": false,
    "vim.statusBarColorControl": false,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    //将jj绑定为<Esc>:切换insert 模式到normal模式
    "vim.insertModeKeyBindings": [
        {
        "before": ["j", "j"],
        "after": ["<Esc>"]
        }
    ],
    //将Ctrl +n 绑定为 :nohl 
    "vim.normalModeKeyBindingsNonRecursive": [
        {
        "before": ["<leader>", "d"],
        "after": ["d", "d"]
        },
        {
        "before": ["<C-n>"],
        "commands": [":nohl"]
        }
    ],
    "vim.leader": "<space>",
    //禁用vim快捷键，用vscode的快捷键设置
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-r>": false,
        "<C-h>": false,
        "<C-f>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-d>": false,
        "<C-w>": false,
        "<C-s>": false,
        "<C-x>": false,
        "<C-n>": false,
        "<C-v>": false,

    },

    //php
    "php.validate.executablePath":"C:/laragon/bin/php/php-7.2.11-Win32-VC15-x64/php.exe",


    //python
    "python.pythonPath": "C:/laragon/bin/python/python-3.6.1/python.exe",
}